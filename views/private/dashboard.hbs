<div class="container-fluid">
  <div class="dashboard-box">
<h1>Welcome, {{user.name}}</h1>
<hr />
<div class="row">
  <h3>View/Edit Your Posts</h3>
  {{#each userposts as |post|}}
    <div class="col-10"><div class="d-grid"><button class="btn btn-secondary">{{post.title}} | {{post.createdOn}}</button></div></div>
    <div class="col-2"><button class="btn btn-danger" href="/remove/{{post.id}}"><i class="fa-regular fa-trash-can"></i></button></div>
    </div>
  </div>
  {{/each}}

  {{#unless posts}}
    <p>No posts have been added.</p>
  {{/unless}}
</div>
</div>
</div>